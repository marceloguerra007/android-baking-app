<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/step_padding"
    android:background="?attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="@bool/focusable"
    android:focusableInTouchMode="@bool/focusable">

    <TextView
            android:id="@+id/TV_StepDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/textSize_Medium"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_list_separator"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/step_margin"/>
</LinearLayout>